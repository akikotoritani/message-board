<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-success"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new) do |f| %>
  名前:
  <%= f.text_field :name %>
<p></p>
  内容: <textarea class="form-control" rows="3" class="img-rounded"></textarea>
<p></p>
  <%= f.submit class: "btn-success" %>

<% end %>